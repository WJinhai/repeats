function [stereo_set] = cvdb_select_stereo_set(conn, set_name)
    connh = conn.Handle;

    stereo_set = {};
    stm = connh.prepareStatement(['SELECT COUNT(*) FROM stereo_sets ' ...
                        'WHERE name=?']);
    stm.setString(1, set_name);
    rs = stm.executeQuery();
    rs.next();
    count = rs.getInt(1);

    if (count > 0)    
        img_num = 'img1_id';
        sql_query_1 = ['SELECT absolute_path, imgs.name, ext ' ...
                       'FROM stereo_sets JOIN img_pairs JOIN imgs ' ...
                       'WHERE pair_id=id ' ...
                       'AND ' img_num  '=id ' ...
                       'AND stereo_sets.name=?'];
        stm = connh.prepareStatement(sql_query_1);
        stm.setString(1, set_name);
        rs = stm.executeQuery();

        img_num = 'img2_id';
        sql_query_2 = ['SELECT absolute_path, imgs.name, ext ' ...
                       'FROM stereo_sets JOIN img_pairs JOIN imgs ' ...
                       'WHERE pair_id=id ' ...
                       'AND ' img_num  '=id ' ...
                       'AND stereo_sets.name=?'];
        
        stm = connh.prepareStatement(sql_query_2);
        stm.setString(1, set_name);
        rs2 = stm.executeQuery();
 
        stereo_set = {};
        row_num = 0;
        while (rs.next() && rs2.next())
            row_num = row_num+1
            stereo_set(row_num).img_1 = char(rs.getString(1));
            stereo_set(row_num).img_2 = char(rs2.getString(1));
        end
    end